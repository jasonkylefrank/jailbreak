rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // TODO: At some point we may need to enhance this to only allow reading
      //        users in the same org, etc.
      allow read: if isLoggedIn();
      // Users can only write to their own doc
      allow write: if request.auth.uid == userId;

      // Matches any document in the 'userOrgs' collection or subcollections.
      match /userOrgs/{userOrgId} {
        allow read: if isLoggedIn() && request.auth.uid == userId;
      }
    }

    match /orgs/{orgId} {
      // TODO: update this...
      //allow read: if isLoggedIn()
      //allow read: if isLoggedIn() && get(/databases/{database}/documents/users/{userId}/userOrgs/{userOrgId}).orgID == orgId
      // allow read: if isLoggedIn() && (get(/users/{request.auth.uid}/userOrgs/{userOrgId}).data.orgID == orgId)
      allow read: if 
        isLoggedIn() 
        // ------ error ---
        //&& exists(/databases/$(database)/documents/users/$(request.auth.uid)/userOrgs/$(userOrgId))
        // ------ error ---
        // && exists(/databases/$(database)/documents/users/$(request.auth.uid)/userOrgs/{userOrgId})
        // ------ error ---
        // && exists(/databases/$(database)/documents/users/$(request.auth.uid)/userOrgs/userOrg)
        // ------ error ---
        // && exists(/databases/$(database)/documents/users/$(request.auth.uid)/userOrgs)
        // ------ error ---
        // && (get(/databases/$(database)/documents/users/$(request.auth.uid)/userOrgs/$(userOrgId)).data.orgID == orgId)
        // ------ error ---
        // && (get(/databases/$(database)/documents/users/$(request.auth.uid)/userOrgs/{userOrgId}).data.orgID == orgId)


        // UPDATE: I changed my ID approach on the users/user/userOrgs/userOrg document to use the orgId as that document's ID (instead of auto-generating that ID)...
        //          I think that will make this security rule dramatically simpler to write.
        && (get(/databases/$(database)/documents/users/$(request.auth.uid)/userOrgs/$(orgId)).data.orgID == orgId)
    }

    function isLoggedIn() {
      return request.auth != null;
    }
  }
}